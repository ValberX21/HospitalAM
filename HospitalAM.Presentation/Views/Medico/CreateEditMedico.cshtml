@model HospitalAM.Application.ViewModel.MedicoViewModel

@{
    var isEdit = Model?.IdMedico > 0;
    ViewData["Title"] = isEdit ? "Editar médico" : "Criar novo médico";
    var buttonLabel = isEdit ? "Atualizar médico" : "Registrar médico";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-7">

            <div class="card shadow-sm border-0">
                <div class="card-body">
                    <h2 class="card-title text-center mb-4">@ViewData["Title"]</h2>

                    <form id="medicoForm">
                        @Html.AntiForgeryToken()

                        @if (isEdit)
                        {
                            <input type="hidden" asp-for="IdMedico" />
                        }

                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="row">
                            <div class="col-md-4">
                                <div class="form-group mb-3">
                                    <label asp-for="IdEmpresa" class="control-label">Empresa</label>
                                    <select asp-for="IdEmpresa" asp-items="Model.Empresas" class="form-select">
                                        <option value="">-- Selecione --</option>
                                    </select>
                                    <span asp-validation-for="IdEmpresa" class="text-danger"></span>
                                </div>
                            </div>
                               @*  <div class="form-group mb-3">
                                    <label asp-for="IdEmpresa" class="control-label"></label>
                                    <input asp-for="IdEmpresa" type="number" class="form-control" min="1" />
                                    <span asp-validation-for="IdEmpresa" class="text-danger"></span>
                                </div> *@
                            

                            <div class="col-md-8">
                                <div class="form-group mb-3">
                                    <label asp-for="IdHospital" class="control-label">Hospital</label>
                                    <select asp-for="IdHospital" asp-items="Model.Hospitais" class="form-select">
                                        <option value="">-- Selecione --</option>
                                    </select>
                                    <span asp-validation-for="IdHospital" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Nome" class="control-label"></label>
                            <input asp-for="Nome" class="form-control" maxlength="150" autocomplete="off" />
                            <span asp-validation-for="Nome" class="text-danger"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-4">
                                <div class="form-group mb-3">
                                    <label asp-for="CPF" class="control-label"></label>
                                    <input asp-for="CPF" class="form-control" maxlength="11" inputmode="numeric" pattern="\d{11}" autocomplete="off" />
                                    <span asp-validation-for="CPF" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group mb-3">
                                    <label asp-for="DataNascimento" class="control-label"></label>
                                    <input asp-for="DataNascimento" type="date" class="form-control" />
                                    <span asp-validation-for="DataNascimento" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group mb-3">
                                    <label asp-for="Genero" class="control-label"></label>
                                    <select asp-for="Genero" class="form-select">
                                        <option value="M">Masculino (M)</option>
                                        <option value="F">Feminino (F)</option>
                                        <option value="O">Outro (O)</option>
                                    </select>
                                    <span asp-validation-for="Genero" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-5">
                                <div class="form-group mb-3">
                                    <label asp-for="Email" class="control-label"></label>
                                    <input asp-for="Email" type="email" class="form-control" autocomplete="off" />
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group mb-3">
                                    <label asp-for="Telefone" class="control-label"></label>
                                    <input asp-for="Telefone" class="form-control" maxlength="20" autocomplete="off" />
                                    <span asp-validation-for="Telefone" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group mb-3">
                                    <label asp-for="CRM" class="control-label"></label>
                                    <input asp-for="CRM" class="form-control" maxlength="20" autocomplete="off" />
                                    <span asp-validation-for="CRM" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Endereco" class="control-label"></label>
                            <input asp-for="Endereco" class="form-control" maxlength="200" autocomplete="off" />
                            <span asp-validation-for="Endereco" class="text-danger"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-8">
                                <div class="form-group mb-4">
                                    <label asp-for="Especialidade" class="control-label"></label>
                                    <input asp-for="Especialidade" class="form-control" maxlength="120" autocomplete="off" />
                                    <span asp-validation-for="Especialidade" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-4 d-flex align-items-center">
                                <div class="form-check form-switch ms-md-3 mb-4">
                                    <input asp-for="Ativo" class="form-check-input" type="checkbox" role="switch" />
                                    <label class="form-check-label" asp-for="Ativo">Ativo</label>
                                </div>
                            </div>
                        </div>

                        <div class="text-center">
                            <button type="submit" class="btn btn-primary w-100">@buttonLabel</button>
                        </div>
                    </form>

                </div>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")

    <script>
        document.getElementById("medicoForm").addEventListener("submit", async function (e) {
            e.preventDefault();

            const form = e.target;

              const medico = {
                idMedico: parseInt(document.getElementById("IdMedico")?.value || 0),
                idEmpresa: parseInt(document.getElementById("IdEmpresa")?.value || 0),
                idHospital: parseInt(document.getElementById("IdHospital")?.value || 0),
                nome: document.getElementById("Nome")?.value || "",
                cpf: document.getElementById("CPF")?.value || "",
                dataNascimento: document.getElementById("DataNascimento")?.value || "",
                genero: document.getElementById("Genero")?.value || "",
                email: document.getElementById("Email")?.value || "",
                telefone: document.getElementById("Telefone")?.value || "",
                crm: document.getElementById("CRM")?.value || "",
                endereco: document.getElementById("Endereco")?.value || "",
                especialidade: document.getElementById("Especialidade")?.value || "",
                ativo: document.getElementById("Ativo")?.checked || false
            };


            const isEdit = medico.id > 0;
            const url = isEdit
                ? `/Medico/Edit/${medico.id}`
                : `/Medico/Create`;

            const method = isEdit ? "PUT" : "POST";

            try {
                const response = await fetch(url, {
                    method: method,
                    headers: {
                        "Content-Type": "application/json"
                    },
                    body: JSON.stringify(medico)
                });

                if (response.ok) {
                    window.location.href = "/Medico/Index";
                } else {
                    console.log("Erro ao salvar medico.");
                }
            } catch (err) {
                console.log(err);
            }
        });
    </script>
}