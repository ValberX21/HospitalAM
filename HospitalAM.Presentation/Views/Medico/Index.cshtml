@model HospitalAM.Presentation.ViewModel.MedicoViewModel
@{
    ViewData["Title"] = "Lista de Médicos";
}

@functions {
    public static string TranslateAtivo(bool ativo) => ativo ? "Ativo" : "Inativo";
}

<div class="container-xl py-4 px-3 px-md-5">
    <!-- Título + ações (empilha no mobile) -->
    <div class="d-flex align-items-center justify-content-between flex-wrap gap-2 mb-3">
        <h2 class="mb-0">Médicos</h2>
        <div class="d-flex gap-2">
            <!-- botão para abrir filtros no mobile -->
            <button class="btn btn-outline-secondary d-md-none" type="button"
                    data-bs-toggle="collapse" data-bs-target="#filters">
                Filtros
            </button>
            <a asp-controller="Medico" asp-action="goToCreate" class="btn btn-primary">
                <i class="bi bi-plus-lg"></i> Novo Médico
            </a>
        </div>
    </div>

    <!-- Filtros: collapse no mobile, visível no >= md -->
    <div id="filters" class="collapse d-md-block">
        <form asp-action="Index" method="get" class="mb-3">
            <div class="row g-2 align-items-end">
                <div class="col-12 col-sm-6 col-md-3">
                    <input type="text" name="NomeFilter" value="@Model.NomeFilter"
                           class="form-control" placeholder="Filtrar por nome..." autocomplete="off" />
                </div>

                <div class="col-12 col-sm-6 col-md-3">
                    <input type="text" name="EspecialidadeFilter" value="@Model.EspecialidadeFilter"
                           class="form-control" placeholder="Especialidade..." autocomplete="off" />
                </div>

                <div class="col-12 col-sm-6 col-md-3">
                    <select name="HospitalFilter" class="form-select">
                        <option value="">Todos os hospitais</option>
                        @foreach (var h in Model.Hospitais)
                                                {
                        <option value="@h.Value" selected="@(h.Selected ? "selected" : null)">@h.Text</option>
                                                }
                    </select>
                </div>

                <div class="col-6 col-sm-3 col-md-2">
                    <select name="AtivoFilter" class="form-select">
                        <option value="">Ativos e inativos</option>
                        <option value="true" selected="@(Model.AtivoFilter == true)">Somente ativos</option>
                        <option value="false" selected="@(Model.AtivoFilter == false)">Somente inativos</option>
                    </select>
                </div>

                <div class="col-6 col-sm-3 col-md-auto d-grid">
                    <input type="hidden" name="pageSize" value="@Model.PageSize" />
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-search"></i> Filtrar
                    </button>
                </div>
            </div>
        </form>
    </div>

    <!-- Tabela responsiva -->
    <div class="table-responsive">
        <table class="table table-bordered table-striped mb-0">
            <thead class="table-dark">
                <tr>
                    <th>Nome</th>
                    <th class="d-none d-sm-table-cell">Especialidade</th>
                    <th class="d-none d-lg-table-cell">CRM</th>
                    <th class="d-none d-lg-table-cell">Email</th>
                    <th class="d-none d-md-table-cell">Hospital</th>
                    <th class="d-none d-sm-table-cell">Status</th>
                    <th style="width:140px;">Ações</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var m in Model.Medicos)
                                {
                <tr>
                    <td>
                        <span class="d-inline-block text-truncate" style="max-width: 220px;">@m.Nome</span>
                    </td>
                    <td class="d-none d-sm-table-cell">
                        @(string.IsNullOrWhiteSpace(m.Especialidade) ? "-" : m.Especialidade)
                    </td>
                    <td class="d-none d-lg-table-cell">@m.CRM</td>
                    <td class="d-none d-lg-table-cell">
                        <span class="d-inline-block text-truncate" style="max-width: 220px;">@m.Email</span>
                    </td>
                    <td class="d-none d-md-table-cell">
                        @(string.IsNullOrWhiteSpace(m.HospitalNome) ? "-" : m.HospitalNome)
                    </td>
                    <td class="d-none d-sm-table-cell">@TranslateAtivo(m.Ativo)</td>
                    <td class="text-nowrap">
                        <div class="btn-group btn-group-sm" role="group">
                            <a asp-action="Details" asp-controller="Medicos" asp-route-id="@m.IdMedico"
                               class="btn btn-outline-info" title="Detalhes"><i class="bi bi-eye"></i></a>
                            <a asp-action="Edit" asp-controller="Medicos" asp-route-id="@m.IdMedico"
                               class="btn btn-outline-warning" title="Editar"><i class="bi bi-pencil"></i></a>
                        </div>
                    </td>
                </tr>
                                }
            </tbody>
        </table>
    </div>

    @if (Model.TotalPages > 1)
        {
    <nav aria-label="Paginação de médicos" class="mt-3 d-flex justify-content-center">
        <ul class="pagination mb-0">
            <li class="page-item @(Model.PageNumber <= 1 ? "disabled" : "")">
                <a class="page-link"
                   asp-action="Index"
                   asp-route-pageNumber="@(Model.PageNumber - 1)"
                   asp-route-pageSize="@Model.PageSize"
                   asp-route-NomeFilter="@Model.NomeFilter"
                   asp-route-EspecialidadeFilter="@Model.EspecialidadeFilter"
                   asp-route-HospitalFilter="@Model.HospitalFilter"
                   asp-route-AtivoFilter="@Model.AtivoFilter">« Anterior</a>
            </li>

            @for (var i = 1; i <= Model.TotalPages; i++)
                        {
            <li class="page-item @(i == Model.PageNumber ? "active" : "")">
                <a class="page-link"
                   asp-action="Index"
                   asp-route-pageNumber="@i"
                   asp-route-pageSize="@Model.PageSize"
                   asp-route-NomeFilter="@Model.NomeFilter"
                   asp-route-EspecialidadeFilter="@Model.EspecialidadeFilter"
                   asp-route-HospitalFilter="@Model.HospitalFilter"
                   asp-route-AtivoFilter="@Model.AtivoFilter">@i</a>
            </li>
                        }

            <li class="page-item @(Model.PageNumber >= Model.TotalPages ? "disabled" : "")">
                <a class="page-link"
                   asp-action="Index"
                   asp-route-pageNumber="@(Model.PageNumber + 1)"
                   asp-route-pageSize="@Model.PageSize"
                   asp-route-NomeFilter="@Model.NomeFilter"
                   asp-route-EspecialidadeFilter="@Model.EspecialidadeFilter"
                   asp-route-HospitalFilter="@Model.HospitalFilter"
                   asp-route-AtivoFilter="@Model.AtivoFilter">Próxima »</a>
            </li>
        </ul>
    </nav>
        }
</div>
